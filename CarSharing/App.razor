
<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" />
    </Found>
    <NotFound>
        <PageTitle>Не знайдено</PageTitle>
        <div style="padding: 20px;">
            <h1>404</h1>
            <p>Вибачте, такої сторінки не існує.</p>
        </div>
    </NotFound>
</Router>