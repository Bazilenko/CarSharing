@page "/"
@inject NavigationManager Navigation

<link href="css/Home.css" rel="stylesheet" />





<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">
            <span class="highlight">Easy</span> Rentals,<br>
            Anywhere You Go.
        </h1>
        <p class="hero-subtitle">
            Find Perfect Car To Drive 🚗
        </p>
    </div>
    <div class="hero-image">
        <img src="images/car-hero.png" alt="Car" />
    </div>
</section>

<!-- Search Box -->
<div class="search-wrapper">
    <div class="search-box">
        <div class="form-group">
            <label>Choose Location</label>
            <input type="text" @bind="searchData.Location" placeholder="Malta International Airport" />
        </div>
        <div class="form-group">
            <label>Pick-up Date</label>
            <input type="date" @bind="searchData.StartDate" />
        </div>
        <div class="form-group">
            <label>Pick-up Time</label>
            <input type="time" @bind="startTime" />
        </div>
        <div class="form-group">
            <label>Drop-Off Date</label>
            <input type="date" @bind="searchData.EndDate" />
        </div>
        <button class="search-btn" @onclick="HandleSearch">🔍</button>
    </div>
</div>

<!-- Steps Section -->
<section class="steps-section">
    <h2 class="steps-title">Rent a Ride in 3 Easy Steps</h2>
    <div class="steps-container">
        <div class="step-item">
            <div class="step-icon">📍</div>
            <span class="step-label">Choose Location</span>
        </div>
        <span class="step-arrow">→</span>
        <div class="step-item">
            <div class="step-icon">📅</div>
            <span class="step-label">Pick-up Date</span>
        </div>
        <span class="step-arrow">→</span>
        <div class="step-item">
            <div class="step-icon">🚗</div>
            <span class="step-label">Book your car</span>
        </div>
    </div>
</section>

<!-- Why Section -->
<section class="why-section">
    <div class="why-header">
        <h2 class="why-title">Why <span>VELOCAR</span> is Your Perfect Road Trip Partner</h2>
    </div>
    <div class="why-grid">
        <div class="why-card active">
            <div class="why-icon">💰</div>
            <div class="why-card-content">
                <h3 class="why-card-title">No Hidden Fees</h3>
                <p class="why-card-desc">We believe in transparency. The price you see is the price you pay — no surprises, no extra charges.</p>
                <a href="#" class="learn-more">Learn more →</a>
            </div>
        </div>
        <div class="why-card">
            <div class="why-icon">✓</div>
            <div class="why-card-content">
                <h3 class="why-card-title">100% Guaranteed</h3>
                <p class="why-card-desc">Your car rental is guaranteed. We ensure reliability and peace of mind on every trip.</p>
            </div>
        </div>
        <div class="why-card">
            <div class="why-icon">🛡️</div>
            <div class="why-card-content">
                <h3 class="why-card-title">Unwavering Service</h3>
                <p class="why-card-desc">Experience premium customer support 24/7 for a seamless rental experience.</p>
            </div>
        </div>
        <div class="why-card">
            <div class="why-icon">⚡</div>
            <div class="why-card-content">
                <h3 class="why-card-title">Convenience is Ours</h3>
                <p class="why-card-desc">Flexible pickup locations and easy booking process for your convenience.</p>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section">
    <div class="newsletter-content">
        <h2 class="newsletter-title">Be the first to know about our hottest deals and discounts</h2>
        <div class="newsletter-form">
            <input type="email" class="newsletter-input" placeholder="Enter email id" />
            <button class="newsletter-btn">Subscribe</button>
        </div>
        <p style="color: rgba(255,255,255,0.5); font-size: 12px; margin-top: 12px;">*Subscribe for exclusive offers and updates. Privacy Policy.</p>
    </div>
    <div class="newsletter-image">
        <img src="images/car-hero.png" alt="Car" />
    </div>
</section>

<!-- FAQ Section -->
<section class="faq-section">
    <h2 class="faq-title">Frequently Asked Questions (FAQ)</h2>
    <div class="faq-list">
        <div class="faq-item">
            <div class="faq-question">
                <span>How Friendly To Drive</span>
                <span class="faq-toggle">+</span>
            </div>
            <div class="faq-answer">Our cars are designed for comfort and ease of driving, suitable for all skill levels.</div>
        </div>
        <div class="faq-item">
            <div class="faq-question">
                <span>How Old Do You Have To Be To Rent A Car?</span>
                <span class="faq-toggle">+</span>
            </div>
            <div class="faq-answer">The minimum age to rent a car is 21 years old. Additional fees may apply for drivers under 25.</div>
        </div>
        <div class="faq-item">
            <div class="faq-question">
                <span>Do You Rent To International Visitors?</span>
                <span class="faq-toggle">+</span>
            </div>
            <div class="faq-answer">Yes! We welcome international visitors. A valid international driving permit along with your home country license is required.</div>
        </div>
        <div class="faq-item">
            <div class="faq-question">
                <span>Is Insurance Necessary When To Provide Driver Proof</span>
                <span class="faq-toggle">+</span>
            </div>
            <div class="faq-answer">Basic insurance is included. Additional coverage options are available at checkout.</div>
        </div>
    </div>
</section>



@code {
    private SearchModel searchData = new SearchModel();
    private TimeOnly startTime = new TimeOnly(12, 0);

    private void HandleSearch()
    {
        Navigation.NavigateTo($"/catalog?location={searchData.Location}&start={searchData.StartDate:yyyy-MM-dd}&end={searchData.EndDate:yyyy-MM-dd}");
    }

    public class SearchModel
    {
        public string Location { get; set; } = "Malta International Airport";
        public DateTime StartDate { get; set; } = DateTime.Now;
        public DateTime EndDate { get; set; } = DateTime.Now.AddDays(1);
    }
}