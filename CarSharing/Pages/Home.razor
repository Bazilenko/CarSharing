@page "/"

@*  *@

<style>
    
    .header {
        background: linear-gradient(90deg, #0073b6 0%, #005a8d 100%);
        padding: 15px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: white;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 20px;
        font-weight: bold;
    }

    .logo-icon {
        width: 35px;
        height: 35px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #0073b6;
    }

    .nav-buttons {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .sign-in-btn, .menu-btn {
        background: transparent;
        border: none;
        color: white;
        cursor: pointer;
    }

    
    .hero-section {
        background: linear-gradient(180deg, #e8f0f7 0%, #f5f8fb 100%);
        padding: 80px 40px 120px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
    }

    .hero-title {
        font-size: 64px;
        line-height: 1.2;
        margin-bottom: 20px;
    }

        .hero-title .easy {
            color: #0073b6;
        }

    .hero-subtitle {
        font-size: 24px;
        color: #333;
        margin-top: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    
    .search-box {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        padding: 30px;
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr auto;
        gap: 20px;
        margin: -60px 40px 0;
        position: relative;
        z-index: 10;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

        .form-group label {
            font-size: 14px;
            color: #666;
            font-weight: 500;
        }

        .form-group input {
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 16px;
            background: #f9f9f9;
        }

    .search-btn {
        background: #0073b6;
        border: none;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        align-self: flex-end;
    }

    
    @@media (max-width: 1024px) {
        .hero-section {
            flex-direction: column;
            text-align: center;
            padding-bottom: 150px;
        }

        .search-box {
            grid-template-columns: 1fr;
            margin: -100px 20px 0;
        }

        .hero-image {
            display: none;
        }
    }
</style>

<header class="header">
    <div class="logo">
        <div class="logo-icon">🚗</div>
        <span>Carsharing P2P</span>
    </div>
    <div class="nav-buttons">
        <button class="sign-in-btn">
            <a href="/login"> 👤 Sign In</a>
            
        </button>
        <button class="menu-btn">☰</button>
    </div>
</header>

<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">
            <span class="easy">Easy</span> Rentals,<br>
            Anywhere You Go.
        </h1>
        <p class="hero-subtitle">
            Find Perfect Car To Drive 🚗
        </p>
    </div>
    <div class="hero-image">
        
        <img src="images/car-hero.png" alt="Car" style="width: 100%; max-width: 500px;" />
    </div>
</section>


<div class="search-box">
    <div class="form-group">
        <label>Pick-up Location</label>
        <input type="text" @@bind ="searchData.Location" placeholder="Malta International Airport" />
    </div>

    <div class="form-group">
        <label>Pick-up Date</label>
        <input type="date" @@bind ="searchData.StartDate" />
    </div>

    <div class="form-group">
        <label>Pick-up Time</label>
        <input type="time" @@bind ="searchData.StartTime" />
    </div>

    <div class="form-group">
        <label>Drop-Off Date</label>
        <input type="date" @@bind ="searchData.EndDate" />
    </div>

    <button type="button" class="search-btn" @@onclick ="HandleSearch">🔍</button>
</div>

<div class="trust-section" style="text-align: center; padding: 40px; color: #999;">
    Trusted by over 50,000 Suppliers
</div>

@code {
    
    private SearchModel searchData = new SearchModel();

    private void HandleSearch()
    {
       
        Console.WriteLine($"Пошук у: {searchData.Location} на дату {searchData.StartDate}");
    }

    public class SearchModel
    {
        public string Location { get; set; }
        public DateTime StartDate { get; set; } = DateTime.Now;
        public DateTime EndDate { get; set; } = DateTime.Now.AddDays(1);
        public string StartTime { get; set; } = "12:00";
    }
}