            <div class="social-links">
                <a href="#" class="social-link">📘</a>
                <a href="#" class="social-link">📷</a>
                <a href="#" class="social-link">🐦</a>
                <a href="#" class="social-link">📌</a>
            </div>
        </div>
        <div>
            <h4 class="footer-heading">Quick Links</h4>
            <ul class="footer-links">
                <li><a href="/">Home</a></li>
                <li><a href="/catalog">Catalog</a></li>
                <li><a href="/my-bookings">My Bookings</a></li>
                <li><a href="/login">Sign In</a></li>
            </ul>
        </div>
        <div>
            <h4 class="footer-heading">Our Locations</h4>
            <ul class="footer-links">
                <li><a href="#">Malta International Airport</a></li>
                <li><a href="#">Valletta City Center</a></li>
                <li><a href="#">Sliema Waterfront</a></li>
                <li><a href="#">Gozo Ferry Terminal</a></li>
            </ul>
        </div>
        <div>
            <h4 class="footer-heading">Follow Us</h4>
            <ul class="footer-links">
                <li><a href="#">Facebook</a></li>
                <li><a href="#">Instagram</a></li>
                <li><a href="#">Twitter</a></li>
                <li><a href="#">LinkedIn</a></li>
            </ul>
        </div>
    </div>
    <div class="footer-bottom">
        © 2026 Carsharing P2P. All rights reserved.
    </div>
</footer>

@code {
    private SearchModel searchData = new SearchModel();
    private TimeOnly startTime = new TimeOnly(12, 0);

    private void HandleSearch()
    {
        Navigation.NavigateTo($"/catalog?location={searchData.Location}&start={searchData.StartDate:yyyy-MM-dd}&end={searchData.EndDate:yyyy-MM-dd}");
    }

    public class SearchModel
    {
        public string Location { get; set; } = "Malta International Airport";
        public DateTime StartDate { get; set; } = DateTime.Now;
        public DateTime EndDate { get; set; } = DateTime.Now.AddDays(1);
    }
}